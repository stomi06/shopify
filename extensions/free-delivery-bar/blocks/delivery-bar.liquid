document.addEventListener("DOMContentLoaded", function () {
    const barHeight = {{ settings.bar_height | default: 40 }};
    const bar = document.querySelector('.free-delivery-bar');
    if (!bar) return;

    document.body.appendChild(bar);

    const header = document.querySelector('header');

    // --- USTAW STYLOWANIE ELEMENT√ìW OD RAZU NA PODSTAWIE STANU PASKA ---
    const savedBarState = localStorage.getItem('deliveryBarState'); // hidden/visible
    const deliveryBarClosed = localStorage.getItem('deliveryBarClosed') === 'true';
    const isBarHidden = bar.classList.contains('hidden') || savedBarState === 'hidden' || deliveryBarClosed;

    // Funkcja do przesuwania element√≥w fixed/top:0
    function updateShiftedElements() {
      const bar = document.querySelector('.free-delivery-bar');
      const barHeight = {{ settings.bar_height | default: 40 }};
      const isBarVisible = bar && !bar.classList.contains('hidden');
      document.querySelectorAll('[data-shifted-by-bar="true"]').forEach(function(el) {
        if (isBarVisible) {
          el.style.top = barHeight + 'px';
          el.style.maxHeight = 'calc(100vh - ' + barHeight + 'px)';
        } else {
          el.style.top = '0px';
          el.style.maxHeight = '100vh';
        }
      });
    }

    // --- KONIEC DODATKU ---

    // Usu≈Ñ manipulacjƒô paddingiem headera!
    // Przesuwaj elementy fixed/top:0 (poza paskiem)
    if ("{{ settings.position | default: 'above-header' }}" === "above-header") {
      function shiftFixedElements() {
        // Dodaj warunek blokujƒÖcy przesuwanie podczas ukrywania paska
        if (window.freeDeliveryBarHiding) return;
        // Przesuwaj tylko elementy, kt√≥re wyglƒÖdajƒÖ na menu/drawery/header/popup/cart
        const selector = [
          '[class*="drawer"]',
          '[class*="menu"]',
          '[class*="header"]',
          '[class*="popup"]',
          '[class*="cart"]',
          '[id*="drawer"]',
          '[id*="menu"]',
          '[id*="header"]',
          '[id*="popup"]',
          '[id*="cart"]'
        ].join(',');

        document.querySelectorAll(selector).forEach(function(el) {
          if (
            el !== bar &&
            window.getComputedStyle(el).position === 'fixed' &&
            parseInt(window.getComputedStyle(el).top) === 0
          ) {
            el.setAttribute('data-shifted-by-bar', 'true');
            // Przesuwaj tylko je≈õli pasek jest widoczny
            if (!bar.classList.contains('hidden')) {
              el.style.top = barHeight + 'px';
              el.style.maxHeight = 'calc(100vh - ' + barHeight + 'px)';
            } else {
              el.style.top = '0px';
              el.style.maxHeight = '100vh';
            }
          }
        });
      }
      shiftFixedElements();

      // MutationObserver na dodawanie element√≥w i zmiany atrybut√≥w (class/style)
      const observer = new MutationObserver(function(mutations) {
        let needsShift = false;
        mutations.forEach(function(mutation) {
          if (mutation.type === 'childList') {
            mutation.addedNodes.forEach(function(node) {
              if (node.nodeType === 1) needsShift = true;
            });
          }
          if (mutation.type === 'attributes' && (mutation.attributeName === 'class' || mutation.attributeName === 'style')) {
            needsShift = true;
          }
        });
        // Dodaj warunek blokujƒÖcy przesuwanie podczas ukrywania paska
        if (!window.freeDeliveryBarHiding && needsShift) shiftFixedElements();
      });
      observer.observe(document.body, { childList: true, subtree: true, attributes: true, attributeFilter: ['class', 'style'] });

      // Dodatkowo: shift po ka≈ºdym klikniƒôciu (np. otwarcie menu przez JS)
      document.addEventListener('click', function() {
        setTimeout(shiftFixedElements, 0);
      });

      // Shift tak≈ºe po resize (czasem menu pojawia siƒô po zmianie rozmiaru)
      window.addEventListener('resize', function() {
        setTimeout(shiftFixedElements, 0);
      });
    }
});

