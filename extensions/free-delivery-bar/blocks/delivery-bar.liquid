  }
  
  // Start initialization with country check
  initializeBar();
  
  // Mapowanie najważniejszych walut na locale z symbolem
  const currencyLocaleMap = {
    USD: 'en-US',
    EUR: 'de-DE',
    PLN: 'pl-PL',
