    // Theme-specific events (Dawn, Impulse, Brooklyn, etc.)
    const themeEvents = [
      'theme:cart:change',
      'theme:cart:updated', 
      'cart-drawer:open',
      'cart-drawer:close',
      'mini-cart:open',
      'mini-cart:close',
